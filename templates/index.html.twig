{% extends 'base.html.twig' %}

{% block content %}

<div class="header">
    <h2>My To Do List</h2>
    <form method="POST" action="{{path('create_task')}}">
        <input type="text" id="toDoInput" placeholder="Task title.." />
        <button type="submit" class="addBtn">Add a task</button>
    </form>
</div>

<ul>
    <li>
        <a href="{{path('switch_status', {'id':1})}}"> <span class="task-list-item">Do Shopping </span> </a>
        <a onclick="return confirm('Are you sure to delete')"
        href="{{path('task_delete', {'id':1})}}"><span class="close">X</span></a>
    </li>

    <li class="checked">
        <a href="undone"><span class="task-list-item">Buy Eggs </span> </a>
        <a onclick="return confirm('Are you sure to delete')"
        href="delete"><span class="close">X</span></a>
    </li>
</ul>

{% endblock content %}